<%- include('layouts/header') %>
<body id="login">
    <header>
        <%- include('layouts/navbar') %>    
    </header>
 
    

    <div class="container">
        <main class="formContainer">       
            <form action="/authenticate" method="POST">
                <div class="sloganLogin">
                    <div class="container bemvindo">
                        <div>
                            <h1 style="color: rgb(92, 255, 190);">BEM-VINDO!</h1>
                            <p>Faça o seu cadastro</p>
                        </div>
                    </div>
            
                    <div class="wave">
                        <img src="/img/wave.png" alt="Efeito de onda">
                    </div>
    
                    <div class="degradeBg"></div>
                    <div class="bg" id="bg"></div>
                </div>




                <div class="inputsContainer">
                    <div class="inputContainer">
                        <i class="fa-solid fa-user"></i>
                        <input type="text" name="user" id="user" placeholder="Usuário" required>
                    </div>
                    <div class="inputContainer">
                        <i class="fa-solid fa-lock"></i>
                        <input type="password" name="password" id="password" placeholder="Senha" required>
                    </div>
                    <div class="inputContainer">
                        <i class="fa-solid fa-lock"></i>
                        <input type="password" id="repetirPassword" placeholder="Repedir senha" required>
                    </div>
                    <div class="inputContainer">
                        <i class="fa-solid fa-envelope"></i>
                        <input type="email" name="email" id="email" placeholder="E-mail" required>
                    </div>
                    <!--
                    <div style="display: flex; align-items: center; gap: 5px; width: 300px;">
                        <input type="checkbox" name="lembrar" id="lembrar" style="width: 15px;">
                        <label for="lembrar">Lembrar senha</label>
                    </div>
                    -->
                </div>

                

                
                <div>
                    <button type="submit">CADASTRAR</button>
                </div>

                <nav>
                    <a href="">Esqueci minha senha</a>
                    <a href="/login">Login</a>
                </nav>
            </form>
        </main> 
    </div>      
</body>
<%- include('layouts/footer') %>